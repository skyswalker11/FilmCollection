@{
    ViewData["Title"] = "Wait List";
}

@model List<ApplicationResponse>
    
<table class="table table-bordered table-striped">
    <thead class="font-weight-bold">
        <!--These are column names for the table view-->
        <tr>
            <td>Category</td>
            <td>Title</td>
            <td>Year</td>
            <td>Director</td>
            <td>Rating</td>
            <td>Edited</td>
            <td>Lent To</td>
            <td>Notes</td>
        </tr>
    </thead>

    <tbody>
        @foreach (var x in Model)
        {
        <!--These are field values for the table view-->
        <tr>
            <td>@x.Category.CategoryName</td>
            <td>@x.Title</td>
            <td>@x.Year</td>
            <td>@x.Director</td>
            <td>@x.Rating</td>
            <td>@x.Edited</td>
            <td>@x.LentTo</td>
            <td>@x.Notes</td>
            <!--These are buttons for the user to edit or delete a record-->
            <td><a asp-controller="Home" asp-action="Edit" asp-route-applicationid="@x.ApplicationID">Edit</a></td>
            <td><a asp-controller="Home" asp-action="Delete" asp-route-applicationid="@x.ApplicationID">Delete</a></td>
        </tr>
        }
    </tbody>

</table>