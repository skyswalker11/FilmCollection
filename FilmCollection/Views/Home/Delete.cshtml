<!--This view provides Delete functionality for the application-->
@{
    ViewData["Title"] = "Delete Application";
}
@model ApplicationResponse

<h2>Confirm Deletion</h2>
<h3>Are you sure you want to delete the record for @Model.Title?</h3>

<form method="post" asp-controller="Home" asp-action="Delete">
    <button>Delete</button>
    <a class="btn btn-primary" asp-controller="Home" asp-action="MovieList">Cancel</a>
    <input type="hidden" asp-for="ApplicationID" />
</form>
